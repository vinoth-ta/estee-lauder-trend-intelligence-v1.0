# Azure OpenAI Configuration
# Get your API key from Azure Portal > Azure OpenAI Service
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Google AI Configuration (for Trend Discovery)
# Set to True to use Vertex AI with Application Default Credentials (recommended)
# Set to False to use direct API key authentication
GOOGLE_GENAI_USE_VERTEXAI=True

# Google Cloud Project ID
# This will be auto-detected if you've run 'gcloud auth application-default login'
# Otherwise, set it manually to your GCP project ID
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google API Key (only needed if GOOGLE_GENAI_USE_VERTEXAI=False)
# Get your API key from https://aistudio.google.com/apikey
# GOOGLE_API_KEY=your_google_api_key_here

# Backend URL Configuration (for local development)
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
