# Azure OpenAI Configuration
# Get your API key from Azure Portal > Azure OpenAI Service
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Google AI Configuration (for Trend Discovery)
# Set to True to use Vertex AI with Application Default Credentials
# Set to False to use direct API key authentication (recommended for local development)
GOOGLE_GENAI_USE_VERTEXAI=False

# Google Cloud Project ID
# Only required if using Vertex AI (GOOGLE_GENAI_USE_VERTEXAI=True)
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Google API Key (required when GOOGLE_GENAI_USE_VERTEXAI=False)
# Get your API key from https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Backend URL Configuration (for local development)
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000